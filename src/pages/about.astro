---
const pageTitle = "About me";

const identity = {
	firstName: "Mateusz",
	surname: "Duda",
	country: "Poland",
	occupation: "Front-end developer",
	hobbies: ["gaming", "music", "running"],
};

const skills = ["JavaScript", "TypeScript", "React", "PIXI.js", "WebGL"];

const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<a href="/">Home</a>
		<a href="/about">About</a>
		<a href="/blog">Blog</a>
		<h1>About</h1>
		<h3>Who am I?</h3>
		<p>I'm a software developer developing things</p>
		<h3>What do I do?</h3>
		<p>I dunno</p>
		<p>Some facts about me</p>
		<ul>
			<li>First name: {identity.firstName}</li>
			<li>Last name: {identity.surname}</li>
			<li>Country: {identity.country}</li>
			<li>Occupation: {identity.occupation}</li>
			<li>Hobbies: {identity.hobbies.join(", ")}</li>
		</ul>
		<h3>Skills</h3>
		<ul>
			{skills.map((skill) => <li>{skill}</li>)}
		</ul>
		{happy ? <p>I'm happy!</p> : <p>I'm not happy</p>}
		{finished && <p>I'm finished!</p>}
		{goal === 3 && <p>Goal is still equal to 3 days</p>}
	</body>
</html>
